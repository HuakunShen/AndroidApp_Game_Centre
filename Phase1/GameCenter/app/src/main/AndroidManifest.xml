<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="csc207project.gamecenter">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/handle"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/handle"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".GameCenter.GameCentre">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SlidingTiles.StartingActivity" />
        <activity android:name=".SlidingTiles.GameActivity" />
        <activity android:name=".SlidingTiles.NewGameActivity" />
        <activity android:name=".GameCenter.AccountRegistration" />
        <activity android:name=".GameCenter.GameCentreInterface"/>
        <activity android:name=".GameCenter.NavSetting"/>
        <activity android:name=".GameCenter.NavChangePassword"/>
        <activity android:name=".GameCenter.NavScoreBoard"/>
        <activity android:name=".ScoreBoard.ScoreBoardActivity">
        </activity>
    </application>

</manifest>